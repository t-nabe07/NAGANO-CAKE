 <h1>ジャンル一覧・追加</h1>
 <!--form_with部分-->
 <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
  <table>
    <tr arign="center">
      <th>
        <p>ジャンル名</p>
        <th><%= f.text_field :name, placeholder: "ジャンル名" %></th>
        <th><%= f.submit'新規登録', class: "btn btn-success" %></th>
      </th>
    </tr>
  </table>
  <% end %>

  <!--ジャンル一覧表示-->
  <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
     </tr>
    </thead>
    <tbody>
     <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
     <% end %>
    </tbody>
  </table>

