 <div class="container">
  <div class="row">
   <h4 class = "bg-light my-3 px-4">ジャンル一覧・追加</h4>
   </div>
   
   
 <!--form_with部分-->
   <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
    <table class="my-5 mx-5">
      <tr>
        <th>
          <p>ジャンル名</p>
          <th class="px-5"><%= f.text_field :name, placeholder: "ジャンル名" %></th>
          <th class="px-5"><%= f.submit'新規登録', class: "btn btn-success" %></th>
        </th>
      </tr>
    </table>
    <% end %>
  
    <!--ジャンル一覧表示-->
    <div class="col-4">
     <table class="table table-hover table-inverse mx-5">
      <thead class="thead-light">
       <tr align="center">
        <th>ジャンル</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
       <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td align="center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>

  </div>
 </div>
 
 
 
 

