<div class="container">
  <div class="row">
    <h4 class="bg-light my-3 px-4"><%= @customer.full_name %>さんの会員情報編集</h4>
    </div>
    <!--編集フォーム-->
      <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
        <!--会員ID-->
          <div class="form-group row">
            <%= f.label :id, "会員ID", class: "col-2 col-form-label" %>
            <div class="col-2">
              <input type="text" readonly class="form-control-plaintext" id="staticCustomerID" value="<%= @customer.id %>">
            </div>
          </div>
        <!--氏名-->
          <div class="form-group row">
            <%= f.label :full_name, "名前", class: "col-12 col-lg-2 col-form-label" %>
            <div class="col-12 mb-2 col-lg-3">
              <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "苗字" %>
            </div>
            <div class="col-12 col-lg-3">
              <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "名前" %>
            </div>
          </div>
        <!--氏名カナ-->
          <div class="form-group row">
            <%= f.label :full_name_kana, "フリガナ", class: "col-12 col-lg-2 col-form-label" %>
              <div class="col-12 mb-2 col-lg-3">
                <%= f.text_field :last_name_kana, autofocus: true, class: "form-control", placeholder: "苗字カナ" %>
              </div>
              <div class="col-12 col-lg-3">
                <%= f.text_field :first_name_kana, autofocus: true, class: "form-control", placeholder: "名前カナ" %>
              </div>
          </div>
        <!--郵便番号-->
          <div class="form-group row">
            <%= f.label :postcode, "郵便番号", class: "col-12 col-lg-2 col-form-label" %>
            <div class="col-12 col-lg-3">
              <%= f.text_field :postcode, class: "form-control" %>
            </div>
          </div>
        <!--住所-->
          <div class="form-group row">
            <%= f.label :address, "住所", class: "col-12 col-lg-2 col-form-label" %>
            <div class="col-12 col-lg-8">
              <%= f.text_field :address, autofocus: true, class: "form-control"  %>
            </div>
          </div>
        <!--電話番号-->
          <div class="form-group row">
            <%= f.label :phone_num, "電話番号", class: "col-12 col-lg-2 col-form-label" %>
            <div class="col-12 col-lg-3">
               <%= f.text_field :phone_num, class: "form-control" %>
            </div>
          </div>
        <!--メールアドレス-->
          <div class="form-group row">
            <%= f.label :mail, "メールアドレス", class: "col-12 col-lg-2 col-form-label" %>
            <div class="col-12 col-lg-3">
               <%= f.email_field :email, class: "form-control" %>
            </div>
          </div>
        <!--会員ステータス-->
          <div class="form-group row">
            <%= f.label :is_deleted, "会員ステータス", class: "col-5 col-lg-2 col-form-label" %>
            <div class="col-auto">
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_deleted, :active, class: "form-check-input" %>
                <%= f.label :"有効", class: "form-check-label"%>
              </div>
              <div class="form-check form-check-inline">
                <%= f.radio_button :is_deleted,:withdraw, class: "form-check-input" %>
                <%= f.label :"退会", class: "form-check-label" %>
              </div>
            </div>
          </div>
        <!--ボタン-->
        <div class="row">
          <div class="col-lg-2"></div>
          <div class="col-5 ml-auto col-lg-4 ml-lg-0">
            <%= f.submit "変更を保存",class: 'btn btn-success btn-lg' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>