<div class="container">
  <div class="row">
    <h4 class = "bg-light my-3 px-4">注文履歴一覧</h4>
    <table class="table table-hover table-inverse mx-5">
      <thead class="thead-light">
       <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
       </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><u><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id), class: "text-dark" %></u></td>
          <td><u><%= link_to order.name, admin_customer_orders_path(order.customer_id), class: "text-dark" %></u></td>
          <td><%= order.order_items.sum(:quantity) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
    <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>
</div>
