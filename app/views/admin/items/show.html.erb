<div class="container">
 <div class="row">
　<div class="col-lg-4">
    <h3>商品詳細</h3>

    <%= attachment_image_tag @item, :image, size: "200x150", format:'jpeg' %>
  </div>
  <div class="col-lg-8">
    <table>
        <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
        </tr>
        <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
        </tr>
        <tr>
            <td>ジャンル</td>
            <td><%= @genre %></td>
        </tr>
        <tr>
            <td>税込価格<br>（税抜価格）</td>
            <td><%= @item.price.to_s (:delimited) %> (<%= @item.price.to_s (:delimited) %>)円 </td>
        </tr>
        <tr>
            <td>販売ステータス</td>
            <td>
                <% if @item.is_active == true %>
                 <strong style="color:#3cb371">販売中</strong>
                <% else %>
                 <strong style="color:#c0c0c0">販売停止中</strong>
                <% end %>
            </td>
        </tr>
        <tr>
    　　　<td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success " %></td>
        </tr>
    </table>
  </div>
 </div>
</div>
