<h2>支払い方法</h2>


<%= form_with model: @order,local:true do |f| %>
<div>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
</div>
<div>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
</div>
<% end %>

<h2>お届け先</h2>
<%= form_with model: @order,local:true do |f| %>
<div>
<%= f.radio_button :payment_method, "tfer" %>
<%= f.label :payment_method, "ご自身の住所" %>
</div>

<div>
<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "登録住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>
<select name="order[address_id]" id="order_address_id">
<option value= "1">配送先1</option>
<option value= "2">配送先2</option>
</select>
</div>

<div>
<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "新しいお届け先" %> </br>
郵便番号(ハイフンなし)
<%= f.text_field :postcode %></br>
住所
<%= f.text_field :address %></br>
宛名
<%= f.text_field :name %>
</div>
<% end %>

