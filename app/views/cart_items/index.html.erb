<div>
  <span><font size="3">ショッピングカート</font></span>
  <span><%= link_to "カートを空にする",cart_items_all_destroy_path(@cart_items.all), method: :delete, class: "btn btn-danger" %></span>
</div>

<div class="table-responsive">
  <table class='table table-bordered'>
    <thead>
      <tr bgcolor="#c0c0c0">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_sales_price.to_s (:delimited) %></td>
          <td>
            <%= form_with model:@cart_item, url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.select :quantity,options_for_select((1..10),{selected: cart_item.quantity.to_i}), class: "quantity" %>
              <%= f.submit "変更",class: "btn btn-info" %>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s (:delimited) %></td>
          <td><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete, local: true %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>

