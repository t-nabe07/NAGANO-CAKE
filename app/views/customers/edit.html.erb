<div class="row"></div>
  <div class="col-xs-12"></div>

  <h3>会員情報編集</h3>
  <br>
  <%= form_with model:@customer, url:customers_path, local:true do |f| %>

    <div class="col-xs-10">
      <div class="form-group col-xs-12">
        <%= f.label :氏名,class:"col-sm-3" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-sm-3" %>
        <%= f.text_field :first_name, autofocus: true, class: " col-sm-3" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :フリガナ,class:"col-sm-3" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-3" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: " col-sm-3" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :郵便番号,class:"col-sm-3" %>
        <%= f.text_field :postcode, autofocus: true, class: "col-sm-3" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :住所,class:"col-sm-3" %>
        <%= f.text_field :address, autofocus: true, class: "col-sm-6" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :電話番号,class:"col-sm-3" %>
        <%= f.text_field :phone_num, autofocus: true, class: "col-sm-3" %>
      </div>
      <div class="form-group col-xs-12">
        <%= f.label :メールアドレス,class:"col-sm-3" %>
        <%= f.text_field :email, autofocus: true, class: "col-sm-3" %>
      </div>
    </div>
    <%= f.submit "編集内容を保存", class: "btn btn-success" %>
    <%= link_to '退会する',customers_unsubscribe_path(@customer), class: "btn btn-danger" %>
  <% end %>

