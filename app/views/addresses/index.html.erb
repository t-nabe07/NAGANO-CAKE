配送先登録/一覧
<%= form_with model: @address, local:true do |f| %>
<div>
  郵便番号(ハイフンなし)
  <%= f.text_field :postcode %>
</div>
<div>
  住所
  <%= f.text_field :address %>
</div>
<div>
  宛名
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
</div>
<% end %>

<table class="table">
  <thead>
    <td>郵便番号</td>
    <td>住所</td>
    <td>宛名</td>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postcode %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>