<div class="container-fluid py-5">
  <div class="col-10 offset-1">
    <h4 class="font-weight-bold">配送先登録</h4>
    <div class="row">
      <div class="col-10">

      <%= form_with model: @address, local:true do |f| %>
        <table>
          <tr>
            <div class="row">
              <%= f.label :"郵便番号(ハイフンなし)", class: "col-12 col-md-3 col-lg-3 col-form-label" %>
              <div class="col-12 col-md-4 col-lg-3">
                <%= f.text_field :postcode, class: "form-control", placeholder: "ハイフン無" %>
                <% if @address.errors.include?(:postcode) %>
                  <p style="color: red;"><%= @address.errors.full_messages_for(:postcode).first %>
                <% end %>
              </div>
            </div>
          </tr>
          </br>
          <tr>
            <div class="row">
              <%=f.label :"住所", class: "col-12 col-md-3 col-lg-3 col-form-label" %>
              <div class="col-12 col-md-4 col-lg-5">
                <%= f.text_field :address, autofocus: true, class: "form-control", placeholder: "住所" %>
                <% if @address.errors.include?(:address) %>
                  <p style="color: red;"><%= @address.errors.full_messages_for(:address).first %>
                <% end %>
            </div>
          </tr>
          </br>
          <tr>
            <div class="row">
              <%= f.label :"宛名", class: "col-12 col-md-3 col-lg-3 col-form-label" %>
              <div class="col-12 col-md-4 col-lg-3">
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "宛名" %>
                <% if @address.errors.include?(:name) %>
                  <p style="color: red;"><%= @address.errors.full_messages_for(:name).first %>
              <% end %>
            </div>
          </tr>
          </br>
          <tr>
            <div class="row">
              <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
            </div>
          </tr>
        </table>
      <% end %>

      <div class="row mt-3">
      <h5 class="font-weight-bold">配送先一覧</h5>
        <table class="table table-bordered">
          <thead class="bg-light">
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th width="200"></th>
            </tr>
        　</thead>
        　<tbody>
        　   <% @addresses.each do |address| %>
        　   <tr>
        　     <td><%= address.postcode %></td>
        　     <td><%= address.address %></td>
        　     <td><%= address.name %></td>
        　     <td>
        　       <%= link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success" %>
                <%= link_to '削除する', address_path(address), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-sm btn-danger" %>
        　     </td>
        　   </tr>
        　   <% end %>
        　</tbody>
        </table>
      </div>
    </div>
  </div>
</div>
