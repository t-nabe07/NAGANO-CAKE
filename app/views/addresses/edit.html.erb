<div class="container">
  <div class="row">
    <h4 class="bg-light my-3 px-4">配送先編集</h4>
  </div>
  </br>
  <%= form_with model: @address, local:true do |f| %>
  <div class="form-group row">
    <%= f.label "郵便番号(ハイフンなし)", class: "col-12 col-md-4 col-lg-3 col-form-label" %>
  <div class="col-12 mb-3 mb-md-0 col-md-4 col-lg-3">
    <%= f.text_field :postcode, class: "form-control" %>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label "住所", class: "col-12 col-md-3 col-lg-3 col-form-label" %>
    <div class="col-12 mb-3 mb-md-0 col-md-4 col-lg-5">
      <%= f.text_field :address, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label "宛名", class: "col-12 col-md-3 col-lg-3 col-form-label" %>
    <div class="col-12 mb-3 mb-md-0 col-md-4 col-lg-3">
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-12 mb-4 mb-md-0 col-md-4 col-lg-3">
      <%= f.submit '変更内容を保存',class: "btn btn-sm btn-success"%>
    </div>
  </div>
  <% end %>
</div>